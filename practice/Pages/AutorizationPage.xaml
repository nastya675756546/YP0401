<Page x:Class="practice.Pages.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage">

    <Grid Background="#FFF">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Background="#D5BCB4"  Margin="5" Width="1000">
            <TextBlock Text="Авторизация" FontSize="30"  Margin="5"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFF"  Margin="20">
            <TextBlock Text="Логин" Margin="5"/>
            <TextBox Text="{Binding fillNameEmployee}" x:Name="loginText" Margin="5"/>
            <TextBlock Text="Пароль" Margin="5"/>
            <TextBox Text="{Binding password}" x:Name="passwordText" Margin="5"/>
            <Button Content="OK" Margin="5" Width="300" Height="30" Background="#D5BCB4" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
