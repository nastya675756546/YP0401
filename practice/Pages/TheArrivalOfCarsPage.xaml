<Page x:Class="practice.Pages.TheArrivalOfCarsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TheArrivalOfCarsPage" Loaded="Page_Loaded">

    <Grid Background="#FFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="TheArrivalOfCarsDG" HorizontalAlignment="Stretch" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Документ" Binding="{Binding receiptDocument}"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding dateOfReceipt, StringFormat=\{0:dd.MM.yyyy\}}"/>
                <DataGridTextColumn Header="Автомобиль" Binding="{Binding nameCar}"/>
                <DataGridTextColumn Header="ФИО менеджера" Binding="{Binding fillNameEmployee}"/>
                <DataGridTextColumn Header="Начальная цена" Binding="{Binding initialPrice}"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Изменить" Margin="5" Height="30" Width="150" Click="Button_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="AddBtn" Content="Добавить" Margin="5" Height="30" Width="150" Click="AddBtn_Click"/>
            <Button x:Name="DelBtn" Content="Удалить" Margin="5" Height="30" Width="150" Click="DelBtn_Click"/>
            <Button x:Name="UpdBtn" Content="Обновить" Margin="5" Height="30" Width="150"/>
            <Button x:Name="backBtn" Content="Назад" Margin="5" Height="30" Width="150" Click="backBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
