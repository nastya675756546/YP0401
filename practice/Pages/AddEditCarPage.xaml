<Page x:Class="practice.Pages.AddEditCarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditCarPage">

    <Grid Background="#FFF">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Наименование" Margin="5"/>
            <TextBox Text="{Binding nameCar}" Margin="5"/>
            <TextBlock Text="VIN" Margin="5"/>
            <TextBox Text="{Binding VIN}" Margin="5"/>
            <TextBlock Text="Марка" Margin="5"/>
            <TextBox Text="{Binding stamp}" Margin="5"/>
            <TextBlock Text="Модель" Margin="5"/>
            <TextBox Text="{Binding model}" Margin="5"/>
            <TextBlock Text="Цвет" Margin="5"/>
            <TextBox Text="{Binding color}" Margin="5"/>
            <Button x:Name="AddEditBtn" Content="Сохранить" Margin="5" Height="20" Width="150" Click="AddEditBtn_Click"/>
            <Button x:Name="DelBtn" Content="Отмена" Margin="5" Height="20" Width="150" Click="DelBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
